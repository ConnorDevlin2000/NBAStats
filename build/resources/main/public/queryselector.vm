#set( $title = "Query Selector" )
<style>
    .form-inline input {
        margin: 10px 0;
    }
    .form-inline {
        flex-direction: column;
        align-items: stretch;
    }

    .center {
        margin: auto;
        width: 60%;
        border: 1px solid black;
        padding: 10px;
    }
    select {
        padding: 5px;
    }

    .add {
        border: 1px dotted black;
    }
</style>

<body>
<h1 style = "text-align: center;">Welcome to the NBA Stat Selector!</h1>
<div class ="center">
    <form action = "/queryselector" method = "POST" class="form-inline" id = "form">
        <label for="select">Show me </label>
        <select name="field1" id="field1">
            <option value="player">players</option>
            <option value="team">teams</option>
            <option value="season">seasons</option>
        </select>
        <label for="pwd"> where </label>
        <select name="attributes" id="cars">
            <option value="fgm">Field Goals Made</option>
            <option value="fga">Field Goals Attempted</option>
            <option value="fg_pct">Field Goal Percentage</option>
            <option value="fg3m">3pt Made</option>
            <option value="fg3a">3pt Attempted</option>
            <option value="fg3_pct">3pt Percentage</option>
            <option value="ftm">Free Throws Made</option>
            <option value="fta">Free Throws Attempted</option>
            <option value="ft_pct">Free Throw Percentage</option>
            <option value="oreb">Offensive Rebounds</option>
            <option value="dreb">Defensive Rebounds</option>
            <option value="reb">Rebounds</option>
            <option value="ast">Assits</option>
            <option value="stl">Steals</option>
            <option value="blk">Blocks</option>
            <option value="pf">Fouls</option>
            <option value="pts">Points</option>
            <option value="plusminus">Plus Minus</option>
        </select>
        <select name="operator" id="operator">
            <option value=">">></option>
            <option value="<"><</option>
            <option value=">=">>=</option>
            <option value="<="><=</option>
            <option value="=">=</option>
        </select>
        <input type="text" id="value" placeholder="Value" name="value">
        <button type="submit" >Submit</button>
    </form>
</div>
</body>

