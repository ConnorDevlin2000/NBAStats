#set( $title = "Show Jobs" )
#parse("public/top.vm")
<body>
    #if ($jobs)
    <h1>List of all available jobs:</h1>
    <div>
        <ol>
        <p>
            #foreach($j in $jobs)
                <li>
                    <i>$j.employer.name</i>, a <i>$j.employer.sector</i> company, recruits for a <i>$j.title</i> position!
                </li>
            #end
            </p>
        </ol>
    </div>
    #end
#parse("public/bottom.vm")